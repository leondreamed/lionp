{
	"name": "lionp",
	"version": "1.0.14",
	"main": "lionp.js",
	"type": "module",
	"license": "MIT",
	"prettier": "@leonzalion/configs/prettier",
	"bin": {
		"lionp": "lionp.js"
	},
	"lionp": {
		"tests": false
	},
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"scripts": {
		"prepare": "simple-git-hooks",
		"start": "node-ts ./src/lionp.ts",
		"build": "node-ts ./scripts/build.ts",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "^1.0.28",
		"@types/async-exit-hook": "^2.0.0",
		"@types/github-url-from-git": "^1.5.1",
		"@types/hosted-git-info": "^3.0.2",
		"@types/ignore-walk": "^4.0.0",
		"@types/inquirer": "^8.1.3",
		"@types/jest": "^27.4.0",
		"@types/minimatch": "^3.0.5",
		"@types/node": "^17.0.8",
		"@types/semver": "^7.3.9",
		"@types/update-notifier": "^5.1.0",
		"eslint": "^8.6.0",
		"jest": "^27.4.7",
		"lint-staged": "^12.1.7",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.3",
		"tsc-alias": "^1.5.0",
		"tsm": "^2.2.1",
		"typescript": "^4.5.4"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"async-exit-hook": "^2.0.1",
		"chalk": "^4.1.2",
		"cosmiconfig": "^7.0.1",
		"del": "^6.0.0",
		"enquirer": "^2.3.6",
		"escape-goat": "^4.0.0",
		"escape-string-regexp": "^5.0.0",
		"execa": "^6.0.0",
		"github-url-from-git": "^1.5.0",
		"hosted-git-info": "^4.1.0",
		"ignore-walk": "^4.0.1",
		"inquirer": "^8.2.0",
		"is-interactive": "^2.0.0",
		"is-scoped": "^3.0.0",
		"issue-regex": "^4.0.0",
		"listr2": "^3.14.0",
		"log-symbols": "^4.1.0",
		"meow": "^10.1.2",
		"minimatch": "^3.0.4",
		"new-github-release-url": "^2.0.0",
		"npm-name": "^6.0.1",
		"onetime": "^6.0.0",
		"open": "^8.4.0",
		"p-memoize": "^6.0.1",
		"p-timeout": "^5.0.2",
		"pkg-dir": "^6.0.1",
		"read-pkg-up": "^9.0.0",
		"semver": "^7.3.5",
		"symbol-observable": "^4.0.0",
		"terminal-link": "^3.0.0",
		"type-fest": "^2.9.0",
		"update-notifier": "^5.1.0"
	},
	"engines": {
		"node": ">=10",
		"npm": ">=6.8.0",
		"git": ">=2.11.0"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
